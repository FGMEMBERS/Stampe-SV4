    <factor>11</factor>
    <center>
      <x-m> 2.754 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.284 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

