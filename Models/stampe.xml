  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>  0.00 </ind>
        <dep> -0.05 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind> 1.00 </ind>
        <dep> 0.01 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.734 </x-m>
      <y-m> -0.606 </y-m>
      <z-m> -0.938 </z-m>
    </center>
    <axis>
      <x> 0.015376 </x>
      <y> 0.034921 </y>
