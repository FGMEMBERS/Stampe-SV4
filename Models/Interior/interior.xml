<?xml version="1.0"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>sieges</object-name>
    <object-name>manetteA1</object-name>
    <object-name>manetteA2</object-name>
    <object-name>manetteB1</object-name>
    <object-name>manetteB2</object-name>
    <object-name>manetteB3</object-name>
    <object-name>manetteB4</object-name>
    <object-name>mancheA</object-name>
    <object-name>mancheB</object-name>
    <object-name>carte</object-name>


    <!-- Objets transparents -->
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Stampe-SV4/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> 0.390 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.290 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Stampe-SV4/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.482 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.290 </z-m>
    </offsets>
  </model>

  <!-- Tachimètres -->
  <model>
    <path>Aircraft/Stampe-SV4/Models/Interior/Panel/Instruments/tach/tach.xml</path>
    <offsets>
      <x-m> -0.482 </x-m>
      <y-m> -0.194 </y-m>
      <z-m>  0.269 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Stampe-SV4/Models/Interior/Panel/Instruments/tach/tach.xml</path>
    <offsets>
      <x-m>  0.390 </x-m>
      <y-m> -0.194 </y-m>
      <z-m>  0.269 </z-m>
    </offsets>
  </model>

  <!-- Animation du manche avant -->
  <animation>
    <type>rotate</type>
    <object-name>mancheA</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m> -0.424 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.335 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheA</object-name>
    <property>/controls/flight/aileron</property>
    <factor>10</factor>
    <center>
      <x-m> -0.424 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.335 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Animation du manche arrière -->
  <animation>
    <type>rotate</type>
    <object-name>mancheB</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m>  0.425 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.335 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheB</object-name>
    <property>/controls/flight/aileron</property>
    <factor>10</factor>
    <center>
      <x-m>  0.425 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.335 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

</PropertyList>
